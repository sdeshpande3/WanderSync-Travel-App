<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/transparent"
        android:showDividers="middle">

        <!-- Post Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <!-- User Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: user@example.com"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: John Doe"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Trip Details Section -->
                <TextView
                    android:id="@+id/tvTripDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Duration: 3 days"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTransportation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transportation: Car, Flight"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Destinations -->
                <TextView
                    android:id="@+id/tvDestinations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destinations: Destination 1, Destination 2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Dining Reservations -->
                <TextView
                    android:id="@+id/tvDining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dining Reservations: Restaurant 1, Restaurant 2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Accommodations -->
                <TextView
                    android:id="@+id/tvAccommodations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accommodations: Hotel 1, Hotel 2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Notes -->
                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes: This was a great trip!"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
