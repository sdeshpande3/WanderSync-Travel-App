                android:layout_marginEnd="20dp"

                android:layout_marginBottom="30dp"
                android:paddingTop="12dp"
                android:text="WanderSync"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/icon_traveller"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tourist_svgrepo_com" />

        </LinearLayout>

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Georgia Tech's Premier Travelling App"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:contentDescription="Main image"
            android:src="@drawable/travel_svgrepo_com"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Logistics Screen"
            android:padding="10dp"
            android:foregroundGravity="center"
            android:layout_marginTop="20sp"
            android:textSize="28sp"

            app:layout_constraintTop_toBottomOf="@id/mainImageView"/>
    </LinearLayout>

