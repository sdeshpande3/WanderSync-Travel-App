<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.view.LogisticsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WanderSync"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/icon_traveller"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tourist_svgrepo_com"
                    android:contentDescription="Traveller Icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Georgia Tech's Premier Travelling App"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />

            <!-- Main Image -->
            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/travel_svgrepo_com"
                android:contentDescription="Main Travel Image"
                android:layout_marginTop="16dp" />

            <!-- Section Title -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logistics Screen"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Add Trip Button -->
            <Button
                android:id="@+id/addTripButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Trip"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <!-- Invite User Button -->
            <Button
                android:id="@+id/inviteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite User"
                android:layout_marginTop="16dp" />

            <!-- Contributors Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contributors:"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />

            <ListView
                android:id="@+id/contributorsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:layout_marginTop="8dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />

            <!-- Notes Section -->
            <EditText
                android:id="@+id/noteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a note"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background" />

            <Button
                android:id="@+id/addNoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Note"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes:"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />

            <ListView
                android:id="@+id/notesListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:layout_marginTop="8dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
